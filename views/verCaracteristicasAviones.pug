extends layout

block content

    .body
        .container
            nav.navbar
                a.link(href='/planificacionAviones')
                    button.button Registrar Avión
                a.link(href='verAviones')
                    button.button Administrar Aviones
                a.link(href='verFabricante')
                    button.button Fabricante Aviones
                a.link(href='verServicios')
                    button.button Servicios Aviones
                a.link(href='verCaracteristicasAviones')
                    button.button Caracteristicas Aviones
                a.link(href='verAsientos')
                    button.button Asientos Aviones
                a.link(href='/')
                    button.button1 Home

            hr
            table.table.bg-white
                thead
                    tr 
                        th(scope='col') Modelo
                        th(scope='col') Velocidad Máxima (Km/h)
                        th(scope='col') Velocidad Crucero (Km/h)
                        th(scope='col') Peso Vacío (Kg)
                        th(scope='col') Peso Máximo (Kg)
                        th(scope='col') Equipaje Máximo  (Kg / Por Pasajero)
                        th(scope='col') Equipaje Máximo en Cabina (Kg / Por Pasajero)
                        th(scope='col') Tipo / Cantidad de Combustible (L)
                        th(scope='col') Distancia de Despegue (m)

                tbody
                - for (var i = 0; i < caracteristicasAvion.length; i++)
                    tr
                   
                        td #{caracteristicasAvion[i].Modelo}
                        td #{caracteristicasAvion[i].VelocidadMaxima}
                        td #{caracteristicasAvion[i].VelocidadCrucero}
                        td #{caracteristicasAvion[i].PesoVacio}
                        td #{caracteristicasAvion[i].PesoMaximo}
                        td #{caracteristicasAvion[i].EquipajeMaximo}
                        td #{caracteristicasAvion[i].EquipajeCabina}
                        td #{caracteristicasAvion[i].Combustible}
                        td #{caracteristicasAvion[i].DistanciaDespegue}