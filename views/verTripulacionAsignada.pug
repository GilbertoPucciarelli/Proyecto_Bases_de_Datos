extends layout

block content
    .body
        
        .container
            nav.navbar
                a.link(href='/manejoPersonal')
                    button.button Registrar Tripulación
                a.link(href='/adminPersonal')
                    button.button Administrar Tripulación
                a.link(href='/verTripulacionAsignada')
                    button.button Vuelos
                a.link(href='/mantenimiento')
                    button.button Aviones Mantenimiento                 
                a.link(href='/tiposMantenimiento')
                    button.button Tipos Mantenimiento
                a.link(href='/verMantenimientos')
                    button.button Aviones Mantenimiento
                a.link(href='/')
                    button.button1 Home

            hr
            table.table.bg-white
                thead
                    tr 
                        th(scope='col') Cédula
                        th(scope='col') Vuelo Asignado
                        th.inv
                        th.mod(scope='col') Eliminar

                tbody
                - for (var i = 0; i < tripulacionVuelos.length; i++)
                    tr
                        td #{tripulacionVuelos[i].Cedula}
                        td #{tripulacionVuelos[i].N_Vuelo}

                        td.inv
                        td
                            form(action=`verTripulacionAsignada/${tripulacionVuelos[i].Cedula}`,method="POST")
                                button.btn.btn-outline-danger(type='submit') Eliminar